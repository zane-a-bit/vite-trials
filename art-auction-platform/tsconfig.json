{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Changed to "react-jsx" for React 17+
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "components/auction-calendar.jsx", "app/auctions/page.jsx", "app/auth/signin/page.jsx", "app/artwork/[id]/page.jsx", "app/browse/page.jsx", "app/auth/signup/page.jsx", "hooks/use-mobile.jsx", "components/upcoming-auctions.jsx", "components/theme-provider.jsx", "components/seller-stats.jsx", "components/related-artworks.jsx", "components/featured-artworks.jsx", "components/bid-history.jsx", "components/bid-form.jsx", "components/artwork-details.jsx", "components/art-categories.jsx", "app/page.jsx", "app/loading.jsx", "app/layout.jsx", "app/seller/new-listing/page.jsx", "app/seller/dashboard/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
